{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "outDir": "./build",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
    "sourceMap": false,
    "strict": true,
    "target": "ES2019",
    "lib": ["ES2019"],
    "declaration": true
  },
  "include": ["./src/**/*"]
}
