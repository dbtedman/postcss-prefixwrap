{
    "extends": "@tsconfig/node20/tsconfig.json",
    "include": ["./src/**/*", "./test/**/*", "./*.ts"],
    "compilerOptions": {
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "outDir": "./build",
        "paths": {
            "*": ["node_modules/*"]
        },
        "sourceMap": false,
        "declaration": true
    }
}
